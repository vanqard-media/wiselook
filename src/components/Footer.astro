---
import { getImage } from "astro:assets";
import logo from "../assets/logo.png";

// Generate multiple formats and responsive widths
const avif = await getImage({ src: logo, format: "avif", widths: [400, 800, 1200] });
const webp = await getImage({ src: logo, format: "webp", widths: [400, 800, 1200] });
const png = await getImage({ src: logo, format: "png", widths: [400, 800, 1200] });
---

<footer>
    <div class="container">
        <div class="logo">
            <a href="/">
                <picture>
                    <source srcset={avif.attributes.srcset} type="image/avif" sizes="100vw" />
                    <source srcset={webp.attributes.srcset} type="image/webp" sizes="100vw" />
                    <img
                      src={png.src}
                      srcset={png.attributes.srcset}
                      sizes="100vw"
                      alt="Wiselook logo'"
                      loading="lazy"
                      decoding="async"
                    />
                </picture>
            </a>
        </div>
        <div class="text-blocks">
            <p>Paseo de la Castellana 42 1A,
                <br>Salamanca, 28046 
                <br>Madrid, España
            </p>
            <p>Contact Us: 
                <br>hello@wiselook.com <!-- ADD EMAILTO: LINK -->
            </p>
        </div>
        <div class="text-block-footer">
            <p>© 2025, Wiselook. All Rights Reserved.</p>
        </div>
    </div>
</footer>
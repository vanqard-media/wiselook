---
import { getImage } from "astro:assets";
import logo from "../assets/logo.png";

const avif = await getImage({ src: logo, format: "avif", widths: [400, 800, 1200] });
const webp = await getImage({ src: logo, format: "webp", widths: [400, 800, 1200] });
const jpeg = await getImage({ src: logo, format: "jpeg", widths: [400, 800, 1200] });
---
<header>
  <nav>
    <div class="nav-container">
      <div class="logo">
        <a href="/">
            <img src={`${import.meta.env.BASE_URL}src/assets/logo.png`} alt="wiselook logo" />
        </a>
      </div>
      <ul class="nav-links">
        <li><a href="/about">About Us</a></li>
        <li><a href="/product">Our Product</a></li>
        <li><a href="/benefits">Benefits</a></li>
        <li><a href="/contact">Contact Us</a></li>
      </ul>
    </div>
  </nav>
</header>